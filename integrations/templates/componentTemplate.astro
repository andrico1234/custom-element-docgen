---
import data from './data.json'
import Layout from 'virtual:components/Layout'

export async function getStaticPaths() {
  return [
  {
    "params": {
      "component": "button"
    },
    "props": {
      "title": "Button",
      "text": "Click the Button"
    }
  },
  {
    "params": {
      "component": "switch"
    },
    "props": {
      "title": "Switch",
      "text": "Toggle the Switch"
    }
  }
]
}

const { title, text } = Astro.props;
---
<Layout title={title}>
  <p>{text}</p>
</Layout>
  
