{
  "name": "astro-custom-elements-docgen",
  "type": "module",
  "version": "0.0.6",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles components/*.astro prism/*.css dist/",
    "test": "exit 0",
    "release": "npm run build && np",
    "dev": "onchange 'index.ts' 'components/*.astro' -- npm run build",
    "build": "npm run clean && tsc && npm run copy-files"
  },
  "dependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.2",
    "astro": "^4.3.5",
    "fast-glob": "^3.3.2",
    "lit": "^3.1.3",
    "typescript": "^5.4.5"
  },
  "files": [
    "./dist",
    "./package.json"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@open-wc/form-control": "^1.0.0",
    "copyfiles": "^2.4.1",
    "custom-elements-manifest": "^2.1.0",
    "np": "^10.0.5",
    "onchange": "^7.1.0",
    "rimraf": "^5.0.7"
  }
}
